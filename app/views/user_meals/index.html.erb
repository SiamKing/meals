<p id="notice"><%= notice %></p>

<h1>User Meals</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_meals.each do |user_meal| %>
      <tr>
        <td><%= link_to 'Show', user_meal %></td>
        <td><%= link_to 'Edit', edit_user_meal_path(user_meal) %></td>
        <td><%= link_to 'Destroy', user_meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

